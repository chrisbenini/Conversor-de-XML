<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ConversorNFe.App.JanelaPrincipal"
        Icon="avares://ConversorNFe.App/recursos/icone/app.ico"
        Width="1100" Height="800"
        MinWidth="1100" MinHeight="800"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        Background="#0B0F14"
        Title="Conversor de Xml"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="44">

  <Window.Styles>
    <!-- Estilos globais (aparência padrão do app) -->

    <!-- Botão base: aplica em TODOS os botões -->
    <Style Selector="Button">
      <Setter Property="FontSize" Value="13"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Padding" Value="14,10"/>
      <Setter Property="CornerRadius" Value="10"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Background" Value="#334155"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Variações de botões -->
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="#16A34A"/>
    </Style>

    <Style Selector="Button.secondary">
      <Setter Property="Background" Value="#1D4ED8"/>
    </Style>

    <Style Selector="Button.ghost">
      <Setter Property="Background" Value="#475569"/>
    </Style>

    <!-- Botão "X" remover arquivo -->
    <Style Selector="Button.remover">
      <Setter Property="Width" Value="30"/>
      <Setter Property="Height" Value="30"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="CornerRadius" Value="15"/>
      <Setter Property="Background" Value="#1F2937"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="BorderBrush" Value="#EF4444"/>
      <Setter Property="Foreground" Value="#EF4444"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="Button.remover:pointerover">
      <Setter Property="Background" Value="#3B0A0A"/>
    </Style>

    <!-- Efeitos de hover/press -->
    <Style Selector="Button:pointerover">
      <Setter Property="Opacity" Value="0.92"/>
    </Style>

    <Style Selector="Button:pressed">
      <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <!-- Botões da janela (min/max/fechar) -->
    <Style Selector="Button.winbtn">
      <Setter Property="CornerRadius" Value="10"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="Background" Value="#334155"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Width" Value="40"/>
      <Setter Property="Height" Value="28"/>
    </Style>

    <Style Selector="Button.winbtn:pointerover">
      <Setter Property="Opacity" Value="0.92"/>
    </Style>

    <!-- Fechar com cor vermelha -->
    <Style Selector="Button.winbtn.close">
      <Setter Property="Background" Value="#7F1D1D"/>
    </Style>

    <Style Selector="Button.winbtn.close:pointerover">
      <Setter Property="Background" Value="#991B1B"/>
    </Style>

  </Window.Styles>

  <!-- Layout geral: linha 0 = Titlebar / linha 1 = conteúdo -->
  <Grid RowDefinitions="44,*">

    <!-- TITLEBAR custom (arrastar janela e botões) -->
    <Border Grid.Row="0"
            Background="#0B0F14"
            Padding="14,8"
            PointerPressed="TitleBar_PointerPressed">

      <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">

        <!-- Área esquerda: ícone + nome + versão -->
        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">

          <Image Width="18" Height="18"
                 Source="avares://ConversorNFe.App/recursos/icone/app.ico"/>

          <StackPanel Spacing="0" VerticalAlignment="Center">
            <TextBlock Text="Conversor de Xml"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="13"/>

            <TextBlock Text="v1.0 • Desktop"
                       Foreground="#94A3B8"
                       FontSize="11"/>
          </StackPanel>

        </StackPanel>

        <!-- Área direita: minimizar / maximizar / fechar -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
          <Button Classes="winbtn" Content="—" Click="Minimizar_Click"/>
          <Button x:Name="BtnMaximizar" Classes="winbtn" Content="▢" Click="Maximizar_Click"/>
          <Button Classes="winbtn close" Content="X" Click="Fechar_Click"/>
        </StackPanel>

      </Grid>
    </Border>

    <!-- CONTEÚDO (cabeçalho + card principal + histórico) -->
    <Grid Grid.Row="1" RowDefinitions="Auto,Auto,*" Margin="28,18,28,18">

      <!-- CABEÇALHO (banner superior do conteúdo) -->
      <Border Grid.Row="0"
              CornerRadius="16"
              Padding="16,14"
              Margin="0,0,0,14">
        <Border.Background>
          <!-- Fundo em degradê -->
          <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#121C2E" Offset="0"/>
            <GradientStop Color="#0B1220" Offset="1"/>
          </LinearGradientBrush>
        </Border.Background>

        <StackPanel Spacing="10">
          <!-- Linha: ícone + título + badge versão -->
          <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
            <Border Width="44" Height="44"
                    CornerRadius="12"
                    Background="#0B1220"
                    VerticalAlignment="Center">
              <Image Width="22" Height="22"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Source="avares://ConversorNFe.App/recursos/icone/app.ico"/>
            </Border>

            <StackPanel Grid.Column="1" Spacing="2" Margin="12,0,0,0">
              <TextBlock Text="Conversor de Xml para Excel"
                         FontSize="26"
                         FontWeight="Bold"
                         Foreground="White"/>
              <TextBlock Text="Converta seu XML para Excel em poucos cliques"
                         FontSize="14"
                         Foreground="#A8B3CF"/>
            </StackPanel>

            <!-- Badge de versão -->
            <Border Grid.Column="2"
                    CornerRadius="999"
                    Background="#0B1220"
                    BorderThickness="1"
                    BorderBrush="#1F2A3D"
                    Padding="10,6"
                    VerticalAlignment="Center">
              <TextBlock Text="v1.0"
                         FontSize="12"
                         FontWeight="SemiBold"
                         Foreground="#C7D2FE"/>
            </Border>
          </Grid>

          <!-- Linha divisória -->
          <Border Height="1" Background="#1F2A3D" Opacity="0.7"/>

          <!-- Observação do suporte -->
          <TextBlock Text="Suporta: XML, PDF e TXT - (PDF e TXT devem conter o XML embutido)"
                     FontSize="12"
                     Foreground="#94A3B8"/>
        </StackPanel>
      </Border>

      <!-- CARD PRINCIPAL (ações e seleção de arquivos) -->
      <Border Grid.Row="1"
              Background="#111827"
              CornerRadius="18"
              Padding="18"
              Margin="0,0,0,16">

        <StackPanel Spacing="12">

          <!-- Título do card -->
          <TextBlock Text="Importe até 10 arquivos e gere sua planilha"
                     FontSize="16"
                     FontWeight="Bold"
                     Foreground="White"/>

          <!-- Ajuda rápida 
          <TextBlock Text="Aceita .xml, .pdf (somente quando o XML estiver embutido no PDF)."
                     FontSize="13"
                     Foreground="#B7C2DD"/> -->

          <!-- Opções de modo -->
          <StackPanel Spacing="8">
            <TextBlock Text="Modo de exportação:"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="#C7D2FE"/>

            <StackPanel Orientation="Horizontal" Spacing="16">
              <RadioButton x:Name="RbModoCalculos"
                           Content="NF-e (C/ cálculos ST/IPI)"
                           IsChecked="True"
                           Foreground="#DBEAFE"/>
              <RadioButton x:Name="RbModoPowerQuery"
                           Content="Power Query (Selecione a linha desejada do XML)"
                           Foreground="#DBEAFE"/>
              <RadioButton x:Name="RbModoXmlBruto"
                           Content="XML Bruto (Extraí o XML completo)"
                           Foreground="#DBEAFE"/>
            </StackPanel>
          </StackPanel>

          <!-- Botões principais -->
          <Grid ColumnDefinitions="Auto,Auto,*,Auto">
            <Button x:Name="BtnSelecionar"
                    Classes="secondary"
                    Content="Selecionar arquivos"
                    Width="180" Height="40"
                    Margin="0,0,10,0"/>

            <Button x:Name="BtnGerar"
                    Classes="primary"
                    Grid.Column="1"
                    Content="Gerar Excel"
                    Width="180" Height="40"
                    Margin="0,0,10,0"/>

            <Button x:Name="BtnLimparArquivos"
                    Classes="ghost"
                    Grid.Column="3"
                    Content="Limpar arquivos"
                    Width="150" Height="40"/>
          </Grid>

          <!-- Lista de arquivos selecionados -->
          <StackPanel Spacing="6">
            <TextBlock Text="Arquivos selecionados:"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="#C7D2FE"/>

            <Border Background="#0B1220" CornerRadius="12" Padding="10" Height="110">
              <ListBox x:Name="ListaArquivos"
                       Background="Transparent"
                       BorderThickness="0"
                       Foreground="#C7D2FE">
                <ListBox.ItemTemplate>
                  <DataTemplate>
                    <Border Background="#0A162A" CornerRadius="10" Padding="10" Margin="0,4">
                      <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Nome}"
                                   VerticalAlignment="Center"
                                   Foreground="#C7D2FE"
                                   TextTrimming="CharacterEllipsis"/>
                        <Button Grid.Column="1"
                                Classes="remover"
                                Content="X"
                                Margin="10,0,0,0"
                                Tag="{Binding Caminho}"
                                Click="RemoverArquivo_Click"/>
                      </Grid>
                    </Border>
                  </DataTemplate>
                </ListBox.ItemTemplate>
              </ListBox>
            </Border>
          </StackPanel>

          <!-- Progresso de processamento -->
          <ProgressBar x:Name="BarraProgresso"
                       IsVisible="False"
                       IsIndeterminate="True"
                       Height="10"/>

          <!-- Status curto (feedback rápido) -->
          <TextBlock x:Name="TxtStatus"
                     Text="Status: Pronto"
                     FontSize="13"
                     Foreground="#93C5FD"/>

        </StackPanel>
      </Border>

      <!-- HISTÓRICO (mensagens do que ocorreu no app) -->
      <Border Grid.Row="2" Background="#0F172A" CornerRadius="18" Padding="18">
        <Grid RowDefinitions="Auto,*">
          <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
            <TextBlock Text="Histórico:"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            <Button x:Name="BtnLimparHistorico"
                    Classes="ghost"
                    Grid.Column="1"
                    Content="Limpar histórico"
                    Width="160" Height="40"/>
          </Grid>

          <Border Grid.Row="1"
                  Background="#0B1220"
                  CornerRadius="12"
                  Padding="10"
                  Margin="0,12,0,0">
            <ListBox x:Name="ListaHistorico"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#DBEAFE"/>
          </Border>
        </Grid>
      </Border>

    </Grid>
  </Grid>
</Window>
